<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="android:colorBackground">@color/colorGray</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:textColor">#000000</item>
        <item name="windowActionBar">false</item>
        <item name="android:statusBarColor">@color/androidstatus</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Widget.AppCompat.ImageButton." parent="Widget.AppCompat.ImageButton">
        <item name="android:layout_width">70dp</item>
        <item name="android:layout_height">70dp</item>
        <item name="android:padding">10dp</item>
        <item name="android:background">@drawable/btn_shape</item>
        <item name="android:elevation">5dp</item>
    </style>

    <style name="cateSelect">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">10dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">10dp</item>
        <item name="android:background">@drawable/btn_shape</item>
        <item name="android:elevation">5dp</item>
        <item name="android:layout_margin">5dp</item>
        <item name="backgroundTint">@color/colorWhite</item>
        <item name="android:textColor">#ff000000</item>"
    </style>


    <style name="TextAppearance.MaterialComponents.Button." parent="Widget.AppCompat.Button">
        <item name="android:layout_width">70dp</item>
        <item name="android:layout_height">70dp</item>
        <item name="android:textSize">10dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">10dp</item>
        <item name="android:background">@drawable/btn_shape</item>
        <item name="android:elevation">5dp</item>
        <item name="backgroundTint">@color/colorWhite</item>
        <item name="android:textColor">#ff000000</item>
    </style>

</resources>
